<h2><%= @region.name %> Categories</h2>

<% if current_user.admin? %>
  <%= link_to "Create a new category", new_region_category_path(@region) %>
<% end %>

<ul>
  <% @categories.each do |category| %>
    <li><%= link_to category.name, region_category_path(@region, category) %>
    <% if current_user.admin? %>
      <%= link_to "Edit", edit_region_category_path(@region, category) %> -
      <%= button_to "Delete", region_category_path(@region, category), method: :delete %>
    <% end %>
    </li>
  <% end %>
</ul>
