<%= form_for [region, post] do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body%>
  </div>
  <div>
    <%= form.collection_check_boxes(:category_ids, region.categories, :id, :name) %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
